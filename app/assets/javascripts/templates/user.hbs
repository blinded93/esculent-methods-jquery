<div id="user-{{id}}">
  <div class="row result">
    <div class="profileImage text-center col-12">
      <img class="rounded img-fluid" src="{{avatarURL}}" id="userAvatar" alt="{{username}} Avatar">
      {{#unlessFriend id}}
        <div>
          <a href="" class="addFriend">
            <img src="/assets/icons/add-friend-24-bw.png" alt="Add Friend" class="addFriendImg" title="Add Friend">
          </a>
        </div>
      {{else}}
        <form id="editProfileImage">
          <input type="hidden" name="authenticity_token">
          <label id="profileImageLabel" for="profileImageInput">
            <img id="upload" src="/assets/icons/upload-bw.png" alt="Upload Image" title="Edit image">
          </label>
          <input type="file" name="avatar" id="profileImageInput">
        </form>
      {{/unlessFriend}}
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a href="" id="userRecipes" data-tab="Recipes" class="nav-link active recipesLink">Recipes</a>
        </li>
        <li class="nav-item">
          <a href="" id="userFavorites" data-tab="Favorites" class="nav-link favoritesLink">Favorites</a>
        </li>
        <li class="nav-item">
          <a href="" id="userFriends" data-tab="Friends" class="nav-link friendsLink">Friends</a>
        </li>
        {{#ifOwned id}}
          <li class="nav-item">
            <a href="" id="userNotifications" data-tab="Messages" class="nav-link messagesLink">Notifications<span id="unreadCount" class="font-weight-bold small black"><span></a>
          </li>
        {{/ifOwned }}
      </ul>
    </div>
  </div>
  <div class="row">
    <div id="seeAll" class="col text-right small" style="display:none;">
      <a href="" id="seeAllLink">See All</a>
    </div>
  </div>
  <div class="row">
    <div class="profileMessageDropdown">
      <div id="messageDropdown" class="dropdown-menu">
      </div>
    </div>
    <div id="profileContent" class="col">
    </div>
  </div>
</div>
