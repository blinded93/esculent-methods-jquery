<form class="needs-validation" id="newRecipe" action="/users/{{user.id}}/recipes" method="post" novalidate>
  <div id="newRecipeErrors">
  </div>
  <input type="hidden" name="authenticity_token">
  <div class="form-group">
    <label for="recipeName" class="small">
      Name
    </label>
    <div class="rel">
      <input type="text" name="recipe[name]" class="col-12 form-control form-control-sm" id="recipeName" autofocus required>
    </div>
  </div>
  <div class="form-group form-row">
    <div class="col-6">
      <label for="recipeCookTime" class="small">
        Cook Time
      </label>
      <div class="rel">
        <input type="number" name="recipe[cook_time]" class="form-control form-control-sm" id="recipeCookTime" min="0" required>
      </div>
    </div>
    <div class="col-6">
      <label for="recipePrepTime" class="small">
        Prep Time
      </label>
      <div class="rel">
        <input type="number" name="recipe[prep_time]" class="form-control form-control-sm" id="recipePrepTime" min="0" required>
      </div>
    </div>
  </div>
  <div class="form-group form-row">
    <div class="col-6">
      <label for="recipeServings" class="small">
        Servings
      </label>
      <div class="rel">
        <input type="number" name="recipe[servings]" class="col-12 form-control form-control-sm" id="recipeServings" min="0" required>
      </div>
    </div>
    <div class="col-6">
      <label for="recipeSkillLevel" class="small">
        Skill Level
      </label>
      <div class="rel">
        <select name="recipe[skill_level]" class="col-12 form-control form-control-sm" id="recipeSkillLevel" required>
          <option value="Easy">Easy</option>
          <option value="Average">Average</option>
          <option value="Difficult">Difficult</option>
        </select>
      </div>
    </div>
  </div>
  <label class="small">
    Ingredients &nbsp;&nbsp; <a href="" id="addIngredient" class="blue font-weight-bold h6">+</a>
  </label>
  <div id="recipeIngredients">
    <div id="ingredient-1" class="form-group form-row rel">
      <input type="number" name="recipe[ingredients][][quantity]" class="quantity ml-1 col-2 form-control form-control-sm" placeholder="Amount" min="0" required>
      <select name="recipe[ingredients][][unit]" class="unit ml-2 col-2 form-control form-control-sm" required>
        <option value="">Unit..</option>
        <option disabled class="black font-weight-bold">Volume</option>
        <option value="cup">cup</option>
        <option value="tbsp">tbsp</option>
        <option value="tsp">tsp</option>
        <option value="fl oz">fl oz</option>
        <option value="mL">mL</option>
        <option disabled class="black font-weight-bold">Weight</option>
        <option value="oz">oz</option>
        <option value="mg">mg</option>
        <option value="g">g</option>
      </select>
      <input type="text" name="recipe[ingredients][][name]" class="name ml-2 col-3 form-control form-control-sm" placeholder="Name" required>
      <select name="recipe[ingredients][][state]" class="state ml-2 col-3 form-control form-control-sm" required>
        <option>State (opt)..</option>
        <option value="chopped">Chopped</option>
        <option value="diced">Diced</option>
        <option value="minced">Minced</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="small">
      Directions &nbsp;&nbsp; <a href="" id="addDirection" class="blue font-weight-bold h6">+</a>
    </label>
    <ol id="recipeDirections">
      <div class="rel">
        <li id="direction-1" class="directionList">
          <textarea name="recipe[directions][]" class="form-control form-control-sm directions" rows="2" required minlength="50"></textarea>
        </li>
      </div>
    </ol>
  </div>
  <div class="form-group">
    <button id="submitNewRecipe" type="submit" class="col-2 btn btn-sm btn-outline-primary">
      Create
    </button>
  </div>
</form>
